require "pathname"
ENV["LIC_GEMFILE"] ||= File.expand_path("../<%= relative_gemfile_path %>",
  Pathname.new(__FILE__).realpath)

lic_binstub = File.expand_path("../lic", __FILE__)

if File.file?(lic_binstub)
  if File.read(lic_binstub, 300) =~ /This file was generated by Lic/
    load(lic_binstub)
  else
    abort("Your `bin/lic` was not generated by Lic, so this binstub cannot run.
Replace `bin/lic` by running `lic binstubs lic --force`, then run this command again.")
  end
end

